# Configuration du serveur
NODE_ENV=development
PORT=3000

# Configuration PostgreSQL
DB_USER=postgres
DB_HOST=localhost
DB_NAME=perc_db
DB_PASSWORD=your_password
DB_PORT=5432

# Matricules administrateurs (séparés par des virgules)
ADMIN_MATRICULES=508924B,679594H

# Configuration SMS - Twilio (optionnel)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+221xxxxxxxxx

# Configuration SMS - Orange Sénégal (optionnel)
# SMS_PROVIDER=orange
# ORANGE_SMS_API_URL=https://api.orange.sn/sms/send
# ORANGE_API_TOKEN=your_orange_token

# Sécurité
JWT_SECRET=your_super_secret_key_here_change_in_production
SESSION_DURATION_HOURS=24

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logs
LOG_LEVEL=debug